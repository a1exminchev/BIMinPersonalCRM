<Window x:Class="BIMinPersonalCRM.Views.Dialogs.AddCompanyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:customControls="clr-namespace:BIMinPersonalCRM.Controls"
        xmlns:converters="clr-namespace:BIMinPersonalCRM.Converters"
        Title="Добавление компании"
        Icon="pack://application:,,,/Resources/BIMin_logo.png"
        Height="440" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <materialDesign:Card Padding="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0" 
                       Text="Новая компания"
                       FontSize="20"
                       FontWeight="Medium"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <!-- Форма -->
            <StackPanel Grid.Row="1">
                
                <!-- Название -->
                <TextBox materialDesign:HintAssist.Hint="Название компании"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Foreground="{DynamicResource MaterialDesignBody}"
                         CaretBrush="{DynamicResource MaterialDesignBody}"
                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                         MaxLength="100"
                         Padding="10"
                         Margin="0,0,0,20"/>

                <!-- Телефон -->
                <TextBox materialDesign:HintAssist.Hint="Телефон"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Foreground="{DynamicResource MaterialDesignBody}"
                         CaretBrush="{DynamicResource MaterialDesignBody}"
                         Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                         MaxLength="20"
                         Padding="10"
                         Margin="0,0,0,20"/>

                <!-- Сайт -->
                <TextBox materialDesign:HintAssist.Hint="Сайт"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Foreground="{DynamicResource MaterialDesignBody}"
                         CaretBrush="{DynamicResource MaterialDesignBody}"
                         Text="{Binding Website, UpdateSourceTrigger=PropertyChanged}"
                         MaxLength="200"
                         Padding="10"
                         Margin="0,0,0,20"/>

                <!-- Логотип -->
                <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                    <Border Width="100"
                            Height="100"
                            CornerRadius="25" 
                            Background="{Binding CardColor, Converter={x:Static converters:ColorToBrushConverter.Instance}}"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" ClipToBounds="True">
                        <Image Source="{Binding LogoPath, Converter={x:Static converters:LogoPathToImageConverter.Instance}}"
                               Stretch="Uniform"
                               Visibility="{Binding LogoPath, Converter={x:Static converters:StringNullOrEmptyToVisibilityConverter.Instance}, ConverterParameter=Inverse}">
                            <Image.Clip>
                                <RectangleGeometry RadiusX="25"
                                                   RadiusY="25"
                                                   Rect="0,0,100,100"/>
                            </Image.Clip>
                        </Image>
                    </Border>

                    <Button Grid.Column="1"
                            Content="Выбрать лого"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="8,0,0,0"
                            Click="SelectLogo_Click"/>
                    <customControls:ColorPickerControl SelectedColorText="{Binding CardColor, UpdateSourceTrigger=PropertyChanged}"
                                                       Margin="32,0,0,0"
                                                       Width="200"/>
                </StackPanel>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0,24,0,0">
                
                <Button Content="Отмена" 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Click="Cancel_Click"
                        Margin="0,0,16,0"
                        MinWidth="100"/>
                
                <Button Content="Добавить" 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="Add_Click"
                        MinWidth="100"/>
            </StackPanel>

        </Grid>
    </materialDesign:Card>
</Window>




