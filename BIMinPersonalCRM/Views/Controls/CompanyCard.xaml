<UserControl x:Class="BIMinPersonalCRM.Views.Controls.CompanyCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BIMinPersonalCRM.Converters"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <Border Style="{StaticResource CardStyle}" Cursor="Hand">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Логотип и основная информация -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип -->
                <Border Grid.Column="0" Width="60" Height="60" CornerRadius="15" 
                        Background="{Binding CardColor, Converter={x:Static local:ColorToBrushConverter.Instance}}"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" ClipToBounds="True">
                    <Image Source="{Binding LogoPath, Converter={x:Static local:LogoPathToImageConverter.Instance}}"
                           Stretch="Uniform"
                           Visibility="{Binding LogoPath, Converter={x:Static local:StringNullOrEmptyToVisibilityConverter.Instance}, ConverterParameter=Inverse}">
                        <Image.Clip>
                            <RectangleGeometry RadiusX="15"
                                               RadiusY="15"
                                               Rect="0,0,60,60"/>
                        </Image.Clip>
                    </Image>
                </Border>

                <!-- Основная информация -->
                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                    <TextBlock Text="{Binding Phone}" FontSize="12" 
                               Foreground="{DynamicResource MaterialDesignBody}" Margin="0,2,0,0"/>
                    <TextBlock Text="{Binding Website}" FontSize="12" 
                               Foreground="{DynamicResource MaterialDesignBody}" Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Статусы -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                <Border Style="{StaticResource StatusIndicatorStyle}"
                        Background="{Binding RelationshipStatus, Converter={x:Static local:RelationshipStatusToBrushConverter.Instance}}">
                    <TextBlock Text="{Binding RelationshipStatus, Converter={x:Static local:EnumDescriptionConverter.Instance}}"
                               FontSize="10"
                               FontWeight="Medium"
                               Foreground="Black"/>
                </Border>
                <Border Style="{StaticResource StatusIndicatorStyle}"
                        Background="{Binding PaymentAbilityStatus, Converter={x:Static local:PaymentAbilityToBrushConverter.Instance}}">
                    <TextBlock Text="{Binding PaymentAbilityStatus, Converter={x:Static local:EnumDescriptionConverter.Instance}}" 
                               FontSize="10"
                               FontWeight="Medium"
                               Foreground="Black"/>
                </Border>
            </StackPanel>

            <!-- Статистика -->
            <Grid Grid.Row="2" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding Orders.Count}" FontSize="18" FontWeight="Bold" 
                               Foreground="{DynamicResource PrimaryHueMidBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Заказов"
                               FontSize="10" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="{Binding Employees.Count}" FontSize="18" FontWeight="Bold" 
                               Foreground="{DynamicResource PrimaryHueMidBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Сотрудников"
                               FontSize="10" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock FontSize="18" FontWeight="Bold" 
                               Foreground="{StaticResource SuccessBrush}" HorizontalAlignment="Center">
                        <TextBlock.Text>
                            <Binding Path="Orders" Converter="{x:Static local:OrdersTotalPriceConverter.Instance}" StringFormat="{}{0:N0}₽"/>
                        </TextBlock.Text>
                    </TextBlock>
                    <TextBlock Text="Общая сумма"
                               FontSize="10" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Прибыльность -->
            <Border Grid.Row="4" 
                    Background="{Binding AverageProfitability, Converter={x:Static local:ProfitabilityToBrushConverter.Instance}}"
                    CornerRadius="4" Padding="8,4">
                <TextBlock Text="{Binding AverageProfitability, Converter={x:Static local:EnumDescriptionConverter.Instance}}" 
                           FontSize="12" FontWeight="Medium" HorizontalAlignment="Center" Foreground="{DynamicResource MaterialDesignBody}"/>
            </Border>
        </Grid>
    </Border>
</UserControl>


