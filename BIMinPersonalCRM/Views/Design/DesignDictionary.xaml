<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Корпоративные цвета -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource PrimaryHueMidColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{DynamicResource PrimaryHueDarkColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource SecondaryHueMidColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{DynamicResource SecondaryHueLightColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{DynamicResource MaterialDesignPaperColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{DynamicResource MaterialDesignCardBackgroundColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource PrimaryHueLightColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{DynamicResource MaterialDesignBodyColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{DynamicResource MaterialDesignBodySecondaryColor}"/>

    <!-- Статусы отношений -->
    <SolidColorBrush x:Key="TerribleRelationBrush" Color="#FFCDD2"/>
    <SolidColorBrush x:Key="BadRelationBrush" Color="#FFAB91"/>
    <SolidColorBrush x:Key="AverageRelationBrush" Color="#FFF9C4"/>
    <SolidColorBrush x:Key="GoodRelationBrush" Color="#C8E6C9"/>
    <SolidColorBrush x:Key="ExcellentRelationBrush" Color="#A5D6A7"/>

    <!-- Статусы прибыльности -->
    <SolidColorBrush x:Key="VeryLowProfitBrush" Color="#FFCDD2"/>
    <SolidColorBrush x:Key="LowProfitBrush" Color="#FFAB91"/>
    <SolidColorBrush x:Key="MediumProfitBrush" Color="#FFF9C4"/>
    <SolidColorBrush x:Key="HighProfitBrush" Color="#C8E6C9"/>
    <SolidColorBrush x:Key="VeryHighProfitBrush" Color="#A5D6A7"/>

    <!-- Стиль для карточек -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="{DynamicResource PrimaryHueMidColor}" Opacity="0.2" ShadowDepth="3" BlurRadius="12"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="{DynamicResource PrimaryHueMidColor}" Opacity="0.2" ShadowDepth="3" BlurRadius="12"/>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль для заголовков секций -->
    <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <!--<Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyColor}"/>-->
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- Стиль для кнопок -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="4" 
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для статус-индикаторов -->
    <Style x:Key="StatusIndicatorStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="2"/>
    </Style>

    <!-- Стиль для TabItem с hover-эффектами -->
        <Style x:Key="CustomTabItemStyle" TargetType="TabItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Grid Background="Transparent">
                        <Border x:Name="HeaderBackground"
                                Background="Transparent"
                                Padding="16,8">
                            <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <Border x:Name="Underline"
                                Height="3"
                                Margin="16,0,16,0"
                                VerticalAlignment="Bottom"
                                Background="Transparent"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Underline" Property="Background" Value="{DynamicResource PrimaryHueLightBrush}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Underline" Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignDisabledButtonForeground}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
    </Style>

    <!-- Стиль для кнопок выбора цвета -->
    <Style x:Key="ColorButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="2">
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}"/>
                            <Setter Property="BorderThickness" Value="2"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
